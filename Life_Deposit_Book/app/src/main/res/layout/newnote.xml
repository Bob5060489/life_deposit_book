<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".Update">

        <TextView
            android:id="@+id/text100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="請選擇記事類型："
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="	#FF000000" />

        <RadioGroup
            android:id="@+id/mRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation='horizontal'>

            <RadioButton
                android:id="@+id/mRadioButton0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:checked="true"
                android:text="學習問題" />

            <RadioButton
                android:id="@+id/mRadioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="5dp"
                android:text="人際溝通" />

            <RadioButton
                android:id="@+id/mRadioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="5dp"
                android:text="未來發展" />

        </RadioGroup>

        <TextView
            android:id="@+id/question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="	#FF000000"
            android:text="1.在學習上，我最近遭遇到哪些問題？\n(由於...，所以發生...)\n※參考範例：" />

        <TextView
            android:id="@+id/example1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="由於這學期沉迷於英雄聯盟這個線上遊戲，導致期中考成績不佳，所以發生了期末成績若是沒有提高，就要再重修一次的難題。"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#B22222" />

        <TextView
            android:id="@+id/start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請陳述："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/newnote_text1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10">
        </EditText>

        <TextView
            android:id="@+id/question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.在學習上，我遭遇到問題心情為何？\n(因為...，所以我覺得...)\n※參考範例："
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="	#FF000000" />

        <TextView
            android:id="@+id/example2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="因為這學期的怠惰，導致成績嚴重下滑，所以我覺得我自己罪有應得。"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#B22222" />

        <TextView
            android:id="@+id/start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請陳述："
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/newnote_text2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10">
        </EditText>

        <TextView
            android:id="@+id/start3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是遇到了甚麼學習上的問題呢？"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup
            android:id="@+id/typequestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="學業成績不理想" />

            <RadioButton
                android:id="@+id/radioButton_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="學業成績好" />

            <RadioButton
                android:id="@+id/radioButton_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="學習困難" />

            <RadioButton
                android:id="@+id/radioButton_q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="其他學習相關問題" />

            <RadioButton
                android:id="@+id/radioButton_q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="其他學習相關問題" />

        </RadioGroup>

        <TextView
            android:id="@+id/start4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的感受是？"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup	android:id="@+id/feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RadioButton android:id="@+id/radioButton_happy1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="喜：覺得開心"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton_happy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-85px"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="喜：覺得感恩" />

            <RadioButton android:id="@+id/radioButton_soso1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="平：覺得平常"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton_soso2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-85px"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="平：覺得應該" />

            <RadioButton android:id="@+id/radioButton_sad1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="哀：覺得難過"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton_sad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-85px"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="哀：覺得失望" />

            <RadioButton android:id="@+id/radioButton_angry1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="怒：覺得憤怒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton_angry2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-85px"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="怒：覺得鬱悶" />

        </RadioGroup>







        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n標題"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/newnote_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10">
        </EditText>

        <Button
            android:id="@+id/newnote_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="確認新增" />


    </LinearLayout>


</ScrollView>
